{
  "name": "ABCFontLoader",
  "version": "1.0.10",
  "swift_version": "3.2",
  "summary": "Adds the ABC fonts to an app.",
  "description": "This pod contains the ABC fonts and by including it they will be added to your app's resources.\nNote that you need to load the font dynamically before it can be used.",
  "homepage": "https://stash.abc-dev.net.au/users/peter.marks/repos/abcfontsiosswift/browse",
  "license": {
    "type": "MIT",
    "file": "LICENSE"
  },
  "authors": {
    "Peter Marks": "marks.peter@abc.net.au"
  },
  "source": {
    "git": "ssh://git@stash.abc-dev.net.au:7999/inn/abc-font-ios.git",
    "tag": "1.0.10"
  },
  "platforms": {
    "ios": "9.0"
  },
  "source_files": "ABCFontLoader/*.swift",
  "resource_bundles": {
    "ABCFontLoader": [
      "ABCFontLoader/Assets/**/*.{otf,json}"
    ]
  },
  "prepare_command": "./download_fonts.sh"
}
